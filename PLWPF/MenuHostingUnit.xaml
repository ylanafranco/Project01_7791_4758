<Window x:Class="PLWPF.MenuHostingUnit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="MenuHostingUnit" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Window.Background>
        <ImageBrush ImageSource="image/marble.jpeg"></ImageBrush>
    </Window.Background>

    <Grid>
        <Button x:Name="button" Background="Transparent" Content="Add a hosting unit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="398" Margin="0,61,0,-0.333" Height="360" Click="Button_Click"/>
        <Button x:Name="button1" Background="Transparent" Content="Login to my account" HorizontalAlignment="Left" VerticalAlignment="Top" Width="391" Margin="403,61,-0.667,-0.333" Height="360" Click="Button1_Click"/>
        <Button Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="95" Margin="10,10,0,0" Height="29" Click="Button_Click_1"/>

    </Grid>
</Window>
