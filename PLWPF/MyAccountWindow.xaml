<Window x:Class="PLWPF.MyAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="MyAccountWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Window.Background>
        <ImageBrush ImageSource="image/marble.jpeg"></ImageBrush>
    </Window.Background>

    <Grid>
        <Button x:Name="button" Content="Update a hosting unit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="794" Margin="0,51,0,0" Height="102" Click="button_Click"/>
        <Button x:Name="button1" Content="Delete a hosting unit" HorizontalAlignment="Left" VerticalAlignment="Top"  Width="794" Margin="0,178,0,0" Height="102" Click="Button1_Click"/>
        <Button x:Name="button2" Content="See the orders" HorizontalAlignment="Left" VerticalAlignment="Top"  Width="794" Margin="0,310,0,0" Height="102" Click="button2_Click"/>
        <Button Content="BACK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="103" Height="29" Click="Button_Click_1"/>
    </Grid>
</Window>
