<Window x:Class="PLWPF.QuestionHostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="QuestionHostWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Window.Background>
        <ImageBrush ImageSource="image/marble.jpeg"></ImageBrush>
    </Window.Background>
    <Grid>
        <TextBox Background="Transparent" HorizontalAlignment="Left" Height="99" Margin="51,51,0,0" TextWrapping="Wrap" Text="First, are you a new host in the system ?" VerticalAlignment="Top" Width="639" FontSize="36" FontWeight="Bold" TextAlignment="Center"/>
        <RadioButton Name="new" Content="New Host" HorizontalAlignment="Left" Margin="150,231,0,0" VerticalAlignment="Top" Height="47" Width="132" FontSize="24" Checked="New_Checked"/>
        <RadioButton Name="old" Content="Already in the system" HorizontalAlignment="Left" Margin="411,231,0,0" VerticalAlignment="Top" FontSize="24" Height="47" Width="279" Checked="Old_Checked"/>
        <Button Content="Back" HorizontalAlignment="Left" Height="23" Margin="28,23,0,0" VerticalAlignment="Top" Width="81" Click="Button_Click"/>

    </Grid>
</Window>
