<Window x:Class="PLWPF.JeuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="JeuWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Window.Background>
        <ImageBrush ImageSource="image/competition.jpg"></ImageBrush>
    </Window.Background>
    <Grid>
        <Label Content="Test Your Chance" Name="jeu" HorizontalAlignment="Left" Height="82" Margin="170,10,0,0" VerticalAlignment="Top" Width="454" FontSize="48" FontWeight="Bold"/>
        <TextBox Name="textbchance" GotFocus="TextBox_NameGFocus" LostFocus="TextBox_NameLFocus" HorizontalAlignment="Left" Height="73" Margin="277,159,0,0" TextWrapping="Wrap" Foreground="Gray" FontStyle="Italic" Text="Enter a number between 1 and 30..." VerticalAlignment="Top" Width="246" FontSize="22"/>
        <Button Name="button_valid" Content="Valid" HorizontalAlignment="Left" Height="28" Margin="299,292,0,0" VerticalAlignment="Top" Width="159" Click="button_valid_Click" FontSize="18" FontWeight="Bold"/>
        <Button Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="93" Margin="10,10,0,0" Height="33" Click="Button_Click"/>

    </Grid>
</Window>
